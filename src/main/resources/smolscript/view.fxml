<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="668.0" prefWidth="922.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="smolscript.Controller">
   <children>
      <TextArea fx:id="scriptArea" layoutX="14.0" layoutY="43.0" prefHeight="480.0" prefWidth="896.0"
                text="print(&quot;hello world&quot;)"/>
      <TextArea fx:id="outputArea" editable="false" layoutX="13.0" layoutY="534.0" prefHeight="101.0"
                prefWidth="896.0"/>
      <Button fx:id="runButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onRunButtonClick"
              text="Run"/>
      <ProgressBar layoutX="267.0" layoutY="14.0" prefHeight="25.0" prefWidth="641.0" progress="0.0"/>
      <TextField layoutX="130.0" layoutY="14.0" prefHeight="16.0" prefWidth="71.0" text="1"/>
      <Label layoutX="60.0" layoutY="14.0" prefHeight="25.0" prefWidth="81.0" text="Run X times:"/>
      <Button fx:id="saveButton" layoutX="212.0" layoutY="14.0" mnemonicParsing="false" onAction="#onSaveButtonClick"
              text="Save"/>
      <Circle fx:id="exitIndicator" fill="#e5ff00" layoutX="816.0" layoutY="654.0" radius="9.0" stroke="BLACK"
              strokeType="INSIDE"/>
      <Circle fx:id="runningIndicator" fill="WHITE" layoutX="899.0" layoutY="654.0" radius="9.0" stroke="BLACK"
              strokeType="INSIDE"/>
      <Label layoutX="835.0" layoutY="645.0" prefHeight="18.0" prefWidth="55.0" text="Running:"/>
      <Label layoutX="746.0" layoutY="645.0" prefHeight="18.0" prefWidth="61.0" text="Exit code:"/>
   </children>
</AnchorPane>
